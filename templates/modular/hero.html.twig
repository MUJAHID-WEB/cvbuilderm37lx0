{% extends 'partials/variables.html.twig' %}

{% set contents = page.header.contents %}

{% block render_block %}

<section class="hero-section">  

    <img class="hero-bg-img " src="{{ url('theme://images/hero/hero-bg.png') }}" alt="Hero Image" />
    <img class="about-hero-bg-img " src="{{ url('theme://images/hero/about-hero-bg.png') }}" alt="Hero Image" />

    <div class="container">

        <div class="wrapper">

            <div class="contents-area wow fadeInDownBig">

                <h1 class="hero-title">
                    {{ contents.title.translatable|raw }}
                </h1>

                <p class="brief">{{ contents.brief.translatable }}</p>

                <div class="actions">

                    <a class="hero-btn" href="#modular_pricing">
                        <span>
                            {{ contents.btn_text.translatable }}
                        </span>

                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M12 16L16 12M16 12L12 8M16 12H8M22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    
                    </a>

                </div>
            
            </div>

              <div class="image-area">
                {% if  contents.main_img != null %}
                    <img class="main-img wow fadeInUp" src="{{ page.media[contents.main_img].url }}" alt="Hero Image" />
                {% endif %}

                {% if contents.images[0].img != null %}
                <img class="bg-img bg-img-1 wow fadeInRight" src="{{ page.media[contents.images[0].img].url }}" alt="Hero Image 1" />
                {% endif %}

                {% if contents.images[1].img != null %}
                    <img class="bg-img bg-img-2 wow fadeInLeft" src="{{ page.media[contents.images[1].img].url }}" alt="Hero Image 2" />
                {% endif %}

            </div>

  
        </div>

    </div>

</section>


{% endblock %}
