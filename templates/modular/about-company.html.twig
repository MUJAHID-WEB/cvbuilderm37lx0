{% extends 'partials/variables.html.twig' %}

{% set module = page.header.contents %}
{% set list_items = page.header.about_sections %}


{% block render_block %}

	<div class="about-conpany-section about-listing-animation {{ module.parent_classes }}" >
		<div class="container">

			<div class="wrapper">

				<div class="header-content">
					<h3>{{ module.title.translatable|striptags('<span>')|raw }}</h3>

					<div class="actions">

						<p>{{ module.description.translatable|striptags('<span>')|raw }}</p>
						<a href="{{ grav.language.active }}/contact" class="button">
						{{ module.btn_text.translatable }}

						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
							<path d="M15.7071 6.29289C15.3166 5.90237 14.6834 5.90237 14.2929 6.2929C13.9024 6.68342 13.9024 7.31659 14.2929 7.70711L17.5858 11H4C3.44772 11 3 11.4477 3 12C3 12.5523 3.44772 13 4 13H17.5858L14.2929 16.2929C13.9024 16.6834 13.9024 17.3166 14.2929 17.7071C14.6835 18.0976 15.3166 18.0976 15.7072 17.7071L20.7018 12.7124C20.7202 12.6942 20.738 12.6753 20.755 12.6558C20.8225 12.5781 20.8761 12.4926 20.9158 12.4024C20.9696 12.2801 20.9996 12.145 21 12.003V12C21 11.9969 21 11.9938 21 11.9907C20.9988 11.865 20.9745 11.7447 20.931 11.6341C20.8822 11.5098 20.8076 11.3933 20.7071 11.2929L15.7071 6.29289Z" fill="white"/>
						</svg>
						
						</a>
					</div>					
				</div>

				<div class="contents-wrapper">	
					<video 
						autoplay 
						muted 
						loop 
						playsinline 
						class="background-video"
					>
						<source src="{{ url('theme://images/com_video.mp4') }}" type="video/mp4">
						
					</video>				

					<div class="swiper swiper-about-company">
						<div class="swiper-wrapper">
							{% for section in page.header.about_sections %}
								<div class="swiper-slide">
									<div class="head-content">
								
										<img src="{{ page.media[section.icon].url }}" alt="Icon" />
								
										<h5>{{ section.title.translatable }}</h5>
									</div>									
									<p>{{ section.description.translatable }}</p>	
								</div>
							{% endfor %}
						</div>
			
						<div class="navigations-custom-company">						
							<div class="swiper-button-next">
								<img src="{{ url('theme://images/arrow-right.png') }}" />
							</div>
							<div class="swiper-button-prev">
								<img src="{{ url('theme://images/arrow-left.png') }}" />
							</div>						
						</div>
					</div>


				</div>			
			</div>

			
		</div>
	</div>


<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  const swiper = new Swiper('.swiper-about-company', {
    slidesPerView: 1,
    spaceBetween: 40,
    loop: true,
    autoplay: false,
    centeredSlides: true,
    rtl: true,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      320: { slidesPerView: 1 },
      768: { slidesPerView: 1 },
      992: { slidesPerView: 1 },
    },
  });
</script>


{% endblock %}
