{% extends 'partials/variables.html.twig' %}

{% set module = page.find('/home').header.footer_top %}

{% block render_block %}


	<div class="footer_top">
		<div class="container">
			<div class="title_btn">
				<h1 class="offer-title">
					{{ module.h1.translatable|striptags('<span>')|raw }}
				</h1>

				{% for button in module.buttons  %}
					<a class="button " href="/{{ grav.language.getActive }}{{ button.link }}">

					{{ button.text.translatable }}

						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
							<path d="M12 16L16 12M16 12L12 8M16 12H8M22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
						
					</a>
				{% endfor %}

			</div>



			<div class="offer-text">
		
				<div class="offer-image">
					<img src="{{ url('theme://images/footer/footer_top.png') }}" />
				</div>
		

				<div class="offer-content"> 
					
					<img src="{{ url('theme://images/footer/footer_top_text.png') }}" />

					<p class="">{{ module.text.translatable }}</p>

					
				</div>

				
			</div>

		</div>
	</div>
{% endblock %}

